@model Rh.Dominio.Estado

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel-body panel-primary">
        <div class="panel-heading ">
            <svg class="glyph stroked pencil"><use xlink:href="#stroked-pencil" /></svg>Editar estado
        </div>
        <hr />
        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.EstadoId)

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="panel-body panel-default">
                <div class="panel-heading ">
                    @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-danger delete" })
                    <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                </div>
            </div>
        </div>
        </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
