@model IEnumerable<Rh.Dominio.Vaga>

@{
    ViewBag.Title = "Vagas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Vagas registradas</div>
            <div class="panel-body">
                <table data-toggle="table" data-show-refresh="true" data-show-toggle="true" data-show-columns="true" data-search="true" data-select-item-name="toolbar1" data-pagination="true" data-sort-name="name" data-sort-order="desc">
                    <thead>
                        <tr>
                            <th data-sortable="true">@Html.DisplayNameFor(model => model.Nome)</th>
                            <th data-sortable="true">@Html.DisplayNameFor(model => model.Descricao)</th>
                            <th data-sortable="true">@Html.DisplayNameFor(model => model.Situacao)</th>
                            <th data-sortable="true">@Html.DisplayNameFor(model => model.DataCadastro)</th>
                            <th><center><strong>Ações</strong></center></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Situacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataCadastro)
                                </td>

                                <td>
                                    <center>
                                        <a href="@Url.Action("Edit", new { id = item.VagaId })" class="btn btn-default"><i class="glyphicon glyphicon-edit"></i></a>
                                        <a href="@Url.Action("Details", new { id = item.VagaId })" class="btn btn-default"><i class="glyphicon glyphicon-file"></i></a>
                                        <a href="@Url.Action("Delete", new { id = item.VagaId })" class="btn btn-default"><i class="glyphicon glyphicon-trash"></i></a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
